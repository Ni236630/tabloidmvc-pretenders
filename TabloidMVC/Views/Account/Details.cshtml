@model TabloidMVC.Models.UserProfile

@{
    ViewData["Title"] = "Details";
}
<div class="container">


    <h1>Details</h1>

    <div>
        <h4>UserProfile</h4>
        <hr />
        <dl class="row">

            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.FullName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.FullName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.DisplayName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.DisplayName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Email)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Email)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.CreateDateTime)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.CreateDateTime)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.UserTypeId)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.UserType.Name)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ImageLocation)
            </dt>
            <dd class="col-sm-10">               
                    @if(string.IsNullOrWhiteSpace(Model.ImageLocation))
                    {
                        <img src="https://cdn.pixabay.com/photo/2015/10/05/22/37/blank-profile-picture-973460_960_720.png"  class="img-thumbnail" style="height: 200px; width: 200px" alt="Generic Profile Picture Icon" />
                    }
                    else
                    {
                        <img src = "@Model.ImageLocation" class="img-thumbnail" style="height: 200px; width: 200px" alt="@Model.FullName image" />
                    }
            </dd>
        </dl>
    </div>
    <div>
        @Html.ActionLink("Edit", "Edit", new {  id = Model.Id  }) |
        <a asp-action="Index">Back to List</a>
    </div>
</div>